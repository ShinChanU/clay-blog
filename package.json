{
  "name": "clay-next-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "open": "open http://localhost:3000",
    "dev:start": "pnpm run dev & pnpm run open",
    "build": "next build",
    "start": "next start",
    "preinstall": "npx only-allow pnpm",
    "knip:check": "pnpm dlx knip",
    "lint": "next lint",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx}\"",
    "type-check": "tsc -b --pretty --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "gray-matter": "^4.0.3",
    "next": "15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.3",
    "rehype-sanitize": "^6.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.1.5",
    "eslint-plugin-perfectionist": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint --file",
      "pnpm run format"
    ]
  }
}
