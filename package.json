{
  "name": "clay-next-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3030",
    "open": "open http://localhost:3000",
    "dev:start": "pnpm run dev & pnpm run open",
    "build": "next build",
    "start": "next start",
    "preinstall": "npx only-allow pnpm",
    "knip:check": "pnpm dlx knip",
    "lint": "next lint",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx}\"",
    "type-check": "tsc -b --pretty --noEmit",
    "prepare": "husky",
    "git:add": "git add .",
    "git:commit": "git commit",
    "git:push": "git push origin main",
    "git:pull": "git pull origin main",
    "push:main": "pnpm run git:add && pnpm run git:commit && pnpm run git:push"
  },
  "dependencies": {
    "@next/third-parties": "^15.3.1",
    "@types/nprogress": "^0.2.3",
    "dayjs": "^1.11.13",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "15.3.3",
    "nprogress": "^0.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^9.0.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "remark-autolink-headings": "^8.0.0",
    "remark-slug": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "^15.1.5",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-perfectionist": "^4.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.1",
    "postcss": "^8",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.10",
    "remark-gfm": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm run lint --file",
      "pnpm run format"
    ]
  },
  "pnpm": {
    "overrides": {
      "brace-expansion": "^2.0.2"
    }
  }
}
